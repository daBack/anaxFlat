---
views:
    breadcrumb:
        region: breadcrumb
        template: default/breadcrumb
        data:
            meta:
                type: breadcrumb

    flash:
        region: flash
        template: default/image
        data:
            src: "img/baack.png"

    next-previous-above:
        region: main
        template: default/next-previous
        sort: 1
        data:
            nextPreviousTitle: false
            meta:
                type: next-previous

    byline:
        region: after-main
        template: default/content
        sort: 1
        data:
            meta:
                type: content
                route: block/byline

    main:
        sort: 2
        data:
            meta:
                type: toc-sort

    next-previous-below:
        region: main
        template: default/next-previous
        sort: 3
        data:
            nextPreviousTitle: true
            meta:
                type: copy
                view: next-previous-above

    toc:
        region: sidebar-left
        template: default/toc
        data:
            title: Analysis
            meta:
                type: book-toc

...
